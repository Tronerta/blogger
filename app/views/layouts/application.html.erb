<!DOCTYPE html>
<html>
  <head>
    <title>Blogger</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="container-fluid">
      <nav class="navbar navbar-expand-lg navbar-light ">
        <%= link_to root_path, class: "navbar-brand" do %>
          <h1>Blogger</h1>
        <% end %>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav justify-content-between w-100">
            <div>
              <li class="nav-item">
                <%= link_to "Tags", tags_path, class: "nav-link" %>
              </li>
            </div>
            
            <div class="row">
              <li class="nav-item mr-3">
                <%= link_to "Create a New Article", new_article_path, class: "btn btn-success" %>
              </li>
               <li class="nav-item">
                <% if logged_in? %>
                  <%= link_to "Logout", logout_path, class: "btn btn-secondary " %>
                <% else %>
                  <%= link_to "Login", login_path, class: "btn btn-success" %>
                <% end %>
              </li>
            </div>

          </ul>
        </div>
      </nav>
    </header>
    
    <div class="container-fluid">
      <%= yield %>
    </div>   
   

  

  </body>
</html>
